<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.tourplanner.AddController"
            prefWidth="400.0" prefHeight="250.0">

    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Label text="Add Tour"/>
            <TextField fx:id="nameField" promptText="Name der Tour"/>
            <Button text="Add" onAction="#onAdd"/>
        </VBox>
    </children>
</AnchorPane>
